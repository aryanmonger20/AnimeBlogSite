<%- include("partials/header")%>

<div class="ui main text container">
    <div class="ui huge header">BlogSite</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div style="width: 36%;" class="image">       
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a style="font-size: 26px;" class="header" href="/blogs/<%=blog._id%>"><%=blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description" style="max-width: 960px;">
                            <p style="font-size: 17px;"><%- blog.body.substring(0,200)%>...</p> 
                        </div>
                        <div class="extra">
                            <a class="ui floated  blue button" href="/blogs/<%=blog._id%>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>


 
<%- include("partials/footer")%>